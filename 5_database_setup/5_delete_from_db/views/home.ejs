<html>
    <head>
        <title>
            <%= locals.title %>
        </title>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
         integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" 
         crossorigin="anonymous">
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <h1 id="page-heading">
            <i class="fas fa-address-book"></i>
            My Contact List
        </h1>
        <div id="contact-list-container">
            <ul>
                <% for(let i of contact_list){%>
                    <li class="contact">
                        <div class="details">
                            <p><%=i.name%></p>
                            <p><%=i.phone%></p>
                        </div>
                        <!-- method 1 to send data from front-end to back end through string param  -->
                        <!-- <div class="delete-button">
                            <a href="/delete-contact/<%=i.phone%>">
                                <i class="fas fa-window-close"></i>
                            </a>
                        </div> -->


                        <!-- <div class="delete-button">
                            <a href="/delete-contact/ashok>">
                                <i class="fas fa-window-close"></i>
                            </a>
                        </div> -->

                        <!-- method 2 to send data from front-end to back end through query param  -->
                        <div class="delete-button">
                            <a href="/delete-contact/?id=<%=i._id%>&name=<%=i.name%>">
                                <i class="fas fa-window-close"></i>
                            </a>
                        </div>
                    </li>
                <%}%>
            </ul>
        </div>

        <form id="new-contact-form" action='/create-contact' method="POST">
            <input type="text" name="name" placeholder="Enter Name" required>
            <input type="number" name="phone" placeholder="Enter Phone" required>
            <button type="submit">Add</button>

        </form>
        <script type="text/javascript" src="/js/home.js"></script>

    </body>
</html>
